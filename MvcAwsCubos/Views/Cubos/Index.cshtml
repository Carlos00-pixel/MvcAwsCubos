@model IEnumerable<MvcAwsCubos.Models.Cubo>

@{
    ViewData["Title"] = "Index";
}

<h1>Cubos</h1>

<p>
    <a asp-action="Create" asp-controller="Cubos">Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCubo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCubo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Imagen)" style="width: 150px; height: 150px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Details" 
                    asp-controller="Cubos"
                    asp-route-id="@item.IdCubo"
                    class="btn btn-info">
                    Detalles
                </a>
                <a asp-action="Edit"
                   asp-controller="Cubos"
                   asp-route-id="@item.IdCubo"
                   class="btn btn-warning">
                    Update
                </a>
                <a asp-action="Delete"
                   asp-controller="Cubos"
                   asp-route-id="@item.IdCubo"
                   class="btn btn-danger">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
